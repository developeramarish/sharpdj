<UserControl x:Class="SharpDj.View.UserControls.Global.SdjCreateServerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpDj.View.UserControls"
             xmlns:converters="clr-namespace:SharpDj.Converters"
             xmlns:helpers="clr-namespace:SharpDj.View.UserControls.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="425">

    <Grid Background="{StaticResource LightBrush}">
        <StackPanel>
            <TextBox Text="{Binding ServerName}">
               <!--Nazwa pokoju-->
            </TextBox>
            <TextBox Text="{Binding ServerName}" AcceptsReturn="True" AcceptsTab="True" Height="75">
                <!--Opis pokoju-->
            </TextBox>
            
        </StackPanel>
    </Grid>
</UserControl>
