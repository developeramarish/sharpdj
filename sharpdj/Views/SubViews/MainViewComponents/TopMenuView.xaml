            </i:Interaction.Triggers>@1@
            ~1~<i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding DragWindow}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding MaximizeWindow}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>@1@
        </Grid>-->

        <!--Close, Minimize, Max-->
        <Grid HorizontalAlignment="Center" Grid.ColumnSpan="3">
            <Image Source="../../../Images/sdj.png" Margin="0 0 0 0"/>
            <Label Content="{Binding}"/>
        </Grid>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Button Background="Transparent" BorderThickness="0">
                <materialDesign:PackIcon Kind="WindowMinimize" />
            </Button>
            <Button Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="WindowMaximize" />
            </Button>
            <Button Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="WindowClose" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
