<UserControl x:Class="SharpDj.View.UserControls.SdjTitleBarForUserControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpDj.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300" DataContext="{Binding SdjTitleBarForUserControls}">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Grid>
                <Grid Background="{StaticResource MidBrush}">
                    <Label Content="{Binding FormName}" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0 0 40 0"/>
                    <DockPanel HorizontalAlignment="Right" >
                        <ContentPresenter/>
                        <Grid Background="DarkRed">
                            <Button Style="{StaticResource IconButtonMouseOver}" Command="{Binding CloseForm}">
                                <Image Source="../../Images/Titlebar/close_24.png" Height="24" Width="40"/>
                            </Button>
                        </Grid>
                    </DockPanel>
                </Grid>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>