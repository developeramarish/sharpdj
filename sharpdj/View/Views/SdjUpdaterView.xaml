<Window x:Class="SharpDj.View.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        BorderThickness="0"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="MainWindow" Height="300" Width="300">
    <Grid Background="#101010">
        <StackPanel HorizontalAlignment="Center">
            <MediaElement Source="updater.mp4" Width="256" Height="256" Name="MediaElement" UnloadedBehavior="Manual" />
            <Label Content="Updating..." Foreground="White" HorizontalAlignment="Center" Margin="0 -20 0 0" />
        </StackPanel>
    </Grid>
</Window>